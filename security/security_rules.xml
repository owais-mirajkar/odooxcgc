<odoo>
    <data noupdate="0">
        <!-- Users can only see their own tickets -->
        <record id="quickdesk_ticket_user_rule" model="ir.rule">
            <field name="name">Ticket User Rule</field>
            <field name="model_id" ref="model_quickdesk_ticket"/>
            <field name="domain_force">['|',('user_id','=',user.id),('assigned_to','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Managers can see all tickets -->
        <record id="quickdesk_ticket_manager_rule" model="ir.rule">
            <field name="name">Ticket Manager Rule</field>
            <field name="model_id" ref="model_quickdesk_ticket"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
    </data>
</odoo>