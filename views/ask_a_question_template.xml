<odoo>
    <template id="ask_ticket_template" name="Ask Ticket Template">
        <t t-call="website.layout">
            <div class="container py-5">
                <div class="card shadow p-5" style="border-radius: 15px; background-color: #ffffff;">
                    <h2 class="mb-4 text-center" style="color: #9c4e85;">Ask Your Question</h2>
                    <form action="/submit/ticket" method="POST">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />

                        <div class="form-group mb-3">
                            <label for="question" class="form-label" style="color: #9c4e85;">Question</label>
                            <input type="text" name="question" required="required" class="form-control" placeholder="Enter your question" />
                        </div>

                        <div class="form-group mb-3">
                            <label for="description" class="form-label" style="color: #9c4e85;">Description</label>
                            <textarea name="description" class="form-control" rows="5" placeholder="Describe your issue..."></textarea>
                        </div>

                        <div class="form-group mb-4">
                            <label for="category_ids" class="form-label" style="color: #9c4e85;">Tags (Categories)</label>
                            <select name="category_ids" multiple="multiple" class="form-control">
                                <t t-foreach="categories" t-as="category">
                                    <option t-att-value="category.id">
                                        <t t-esc="category.name" />
                                    </option>
                                </t>
                            </select>
                            <small class="text-muted">Hold Ctrl (or Cmd) to select multiple</small>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn" style="background-color: #9c4e85; color: white;">Post</button>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>
