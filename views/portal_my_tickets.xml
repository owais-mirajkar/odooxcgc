<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <template id="quick_portal_helpdesk_ticket" name="My Tickets">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>

                <t t-call="portal.portal_searchbar">
                    <t t-set="title">Tickets</t>
                    <a class="btn btn-primary" href="/my/quickdesk/dashboard" role="button">Dashboard</a>
                    <a class="btn btn-primary" href="/ask" role="button">Ask</a>
                </t>
                
                <div t-if="not grouped_tickets" class="alert alert-info">
                    There are currently no Ticket for your account.
                </div>
                <t t-else="">
                    <t t-call="portal.portal_table">
                        <thead>
                            <tr>
                                <th>Ticket</th>
                                <th class="text-end" t-if="groupby != 'create_date'">Reported on</th>
                                <th id="ticket_user_header" t-if="groupby != 'assigned_to'" class="ps-5">Assigned to</th>
                                <th t-if="groupby != 'state'" colspan="5" class="text-end">Status</th>
                            </tr>
                        </thead>
                        <t t-foreach="grouped_tickets" t-as="tickets">
                            <tbody>
                                <tr t-if="not groupby =='none'" class="table-light">
                                    <th t-if="groupby == 'state'" colspan="5">
                                        <span t-field="tickets[0].state"/>
                                    </th>
                                    <th t-if="groupby == 'assigned_to'" colspan="5">
                                        <span t-if="tickets[0].assigned_to" t-out="tickets[0].assigned_to.name"/>
                                        <span t-else="">Unassigned</span>
                                    </th>
                                    <th t-if="groupby == 'category_id'" colspan="6">
                                        <span t-field="tickets[0].category_id.name"/>
                                    </th>
                                    <th t-if="groupby == 'create_date'" colspan="5">
                                        <span t-field="tickets[0].create_date"/>
                                    </th>
                                    <th t-if="groupby == 'priority'" colspan="6">
                                        <span t-esc="dict(tickets[0]._fields['priority'].selection).get(tickets[0].priority)"/>
                                    </th>
                                </tr>
                            </tbody>
                            <t t-foreach="tickets" t-as="ticket">
                                <tr>
                                    <td class="text-start"><a t-attf-href="/my/quickdesk/tickets/#{ticket.id}"><small>#</small><span t-field="ticket.number"/><span class="ms-2" t-att-title="ticket.name" t-field="ticket.name"/></a></td>
                                    <td class="text-end" t-if="groupby != 'create_date'">
                                        <span t-field="ticket.create_date" t-options='{"widget": "datetime", "hide_seconds": True}'/>
                                    </td>
                                    <td id="ticket_user_body" t-if="groupby != 'assigned_to'" class="ps-5 lh-1">
                                        <img t-if="ticket.assigned_to" class="o_avatar o_portal_contact_img rounded" t-attf-src="#{image_data_uri(ticket.assigned_to.sudo().avatar_128)}" alt="Contact"/>
                                        <span t-field="ticket.assigned_to"/>
                                    </td>
                                    <td t-if="groupby != 'state'" class="text-end">
                                        <span t-attf-class="badge rounded-pill fw-normal text-bg-primary" t-esc="ticket.state"/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </t>
                </t>
            </t>
    </template>
     <!-- Ticket Detail Template -->
    <template id="portal_ticket_detail" name="Ticket Detail">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-set="title" t-value="ticket.name"/>
            <t t-set="wrapwrap_classes" t-value="'o_portal_bg_dark'"/>

            <div class="row mt16 o_project_portal_sidebar">
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-4 col-xxl-3 d-print-none'"/>

                    <t t-set="entries">
                        <div class="d-flex flex-column">
                            <!-- Close Ticket Button -->
                            <div t-if="ticket.state not in ['resolved', 'closed']" class="flex-grow-1">
                                <div class="d-grid flex-sm-nowrap mb-3">
                                    <button class="btn btn-outline-success" data-bs-target="#quickdesk_ticket_close_modal" data-bs-toggle="modal">
                                        <i class="fa fa-check"></i> Close Ticket
                                    </button>
                                </div>

                                <!-- Close Modal -->
                                <div class="modal" tabindex="-1" role="dialog" id="quickdesk_ticket_close_modal">
                                    <div class="modal-dialog mt-5" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Close ticket</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Are you sure you want to close this ticket? This action will mark the ticket as resolved.</p>
                                            </div>
                                            <div class="modal-footer">
                                                <a role="button" class="btn btn-success" t-attf-href="/my/quickdesk/tickets/#{ticket.id}/close">
                                                    <i class="fa fa-check"></i> Close Ticket
                                                </a>
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Navigation -->
                            <div id="ticket-nav" class="flex-grow-1 p-0" role="complementary">
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <a class="nav-link p-0" href="#card_header">
                                            <i class="fa fa-ticket"></i> Ticket Details
                                        </a>
                                    </li>
                                    <li class="nav-item" t-if="ticket.description">
                                        <a class="nav-link p-0" href="#description_section">
                                            <i class="fa fa-file-text"></i> Description
                                        </a>
                                    </li>
                                </ul>
                            </div>

                            <!-- Contact Information -->
                            <div class="mt-4">
                                <div t-if="ticket.assigned_to" class="col-12 mb-3">
                                    <h6><small class="text-muted">Assigned to</small></h6>
                                    <div class="d-flex align-items-center">
                                        <img t-if="ticket.assigned_to.avatar_128" 
                                             class="o_avatar o_portal_contact_img rounded me-2" 
                                             t-att-src="image_data_uri(ticket.assigned_to.sudo().avatar_128)" 
                                             alt="Contact" style="width: 40px; height: 40px;"/>
                                        <div>
                                            <div t-esc="ticket.assigned_to.name"/>
                                            <small class="text-muted" t-if="ticket.assigned_to.email" t-esc="ticket.assigned_to.email"/>
                                        </div>
                                    </div>
                                </div>
                                
                                <div t-if="ticket.partner_id" class="col-12">
                                    <h6><small class="text-muted">Customer</small></h6>
                                    <div class="d-flex align-items-center">
                                        <img t-if="ticket.partner_id.avatar_128" 
                                             class="o_avatar o_portal_contact_img rounded me-2" 
                                             t-att-src="image_data_uri(ticket.partner_id.sudo().avatar_128)" 
                                             alt="Contact" style="width: 40px; height: 40px;"/>
                                        <div>
                                            <div t-esc="ticket.partner_id.name"/>
                                            <small class="text-muted" t-if="ticket.partner_id.email">
                                                <a t-attf-href="mailto:{{ticket.partner_id.email}}" t-esc="ticket.partner_id.email"/>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
                
                <!-- Main Content -->
                <div id="ticket_content" class="o_portal_content col-12 col-lg-8 col-xxl-9 mt-5 mt-lg-0">
                    <div t-if="ticket_closed" class="alert alert-success alert-dismissible d-print-none" role="status">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        <i class="fa fa-check-circle"></i> Your ticket has been successfully closed. Thank you!
                    </div>
                    
                    <div id="card">
                        <div id="card_header" class="container" data-anchor="true">
                            <div class="row gs-0">
                                <div class="col-md">
                                    <h3 class="row justify-content-between">
                                        <div class="col-md-9 text-truncate">
                                            <span t-esc="ticket.name"/>
                                            <small class="text-muted"> (#<span t-esc="ticket.number"/>)</small>
                                        </div>
                                        <div class="col col-auto">
                                            <small>Status:</small>
                                            <span t-attf-class="badge rounded-pill #{
                                                'text-bg-success' if ticket.state in ['resolved', 'closed'] else
                                                'text-bg-warning' if ticket.state == 'in_progress' else
                                                'text-bg-info' if ticket.state == 'pending' else
                                                'text-bg-primary'
                                            }" t-esc="dict(ticket._fields['state'].selection).get(ticket.state)"/>
                                        </div>
                                    </h3>
                                </div>
                            </div>
                        </div>
                        
                        <div id="card_body">
                            <div class="row mb-4">
                                <div class="col-lg-6">
                                    <strong>Reported on:</strong>
                                    <span t-field="ticket.create_date" t-options='{"widget": "datetime", "hide_seconds": True}'/>
                                </div>
                                <div class="col-lg-6" t-if="ticket.priority">
                                    <strong>Priority:</strong>
                                    <span t-esc="dict(ticket._fields['priority'].selection).get(ticket.priority)"/>
                                </div>
                            </div>

                                <div class="row mb-4" t-if="ticket.category_ids">
                                    <div class="col-lg-12">
                                        <strong>Categories:</strong>
                                        <t t-foreach="ticket.category_ids" t-as="category">
                                            <span class="badge bg-secondary mx-1"
                                                t-esc="category.name" />
                                        </t>
                                    </div>
                                </div>

                            
                            <div t-if="ticket.description" id="description_section" class="row mt-4" data-anchor="true">
                                <div class="col-lg-12">
                                    <h4>Description</h4>
                                    <div t-field="ticket.description" class="border p-3 rounded bg-light"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    </data>
</odoo>
