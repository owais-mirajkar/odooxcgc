<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="quickdesk_team_view" model="ir.ui.view">
        <field name="name">quickdesk.team.tree</field>
        <field name="model">quickdesk.team</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="member_ids" widget="many2many_tags"/>
                <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record>

    <record id="quickdesk_team_form" model="ir.ui.view">
        <field name="name">quickdesk.team.form</field>
        <field name="model">quickdesk.team</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" string="Color" widget="color_picker"/>
                        <field name="member_ids" widget="many2many_tags"/>
                        <field name="category_ids" widget="one2many"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_quickdesk_team" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="res_model">quickdesk.team</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>