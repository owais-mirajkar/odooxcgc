<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_quickdesk_ticket_tree" model="ir.ui.view">
        <field name="name">quickdesk.ticket.tree</field>
        <field name="model">quickdesk.ticket</field>
        <field name="arch" type="xml">
            <list>
                <field name="number"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="assigned_to"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="upvotes"/>
                <field name="downvotes"/>
            </list>
        </field>
    </record>

    <record id="view_quickdesk_ticket_form" model="ir.ui.view">
        <field name="name">quickdesk.ticket.form</field>
        <field name="model">quickdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="Support Ticket" class="o_form">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_upvote" type="object" string="Upvote" class="btn-primary"/>
                        <button name="action_downvote" type="object" string="Downvote" class="btn-secondary"/>
                        <button name="action_assign_to_me" type="object" string="Assign to Me" class="btn-info"/>
                    </div>
                    <group>
                        <field name="number" readonly="1"/>
                        <field name="name"/>
                        <field name="description" widget="html"/>
                        <field name="category_id"/>
                        <field name="team_id"/>
                        <field name="user_id" readonly="1"/>
                        <field name="partner_id"/>
                        <field name="assigned_to"/>
                        <field name="priority"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,in_progress,resolved,closed"/>
                        <field name="upvotes" readonly="1"/>
                        <field name="downvotes" readonly="1"/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_quickdesk_ticket_search" model="ir.ui.view">
        <field name="name">quickdesk.ticket.search</field>
        <field name="model">quickdesk.ticket</field>
        <field name="arch" type="xml">
            <search string="Search Tickets">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="assigned_to"/>
                <field name="state"/>
                <field name="priority"/>
                <filter name="my_tickets" string="My Tickets" domain="[('assigned_to','=',uid)]"/>
                <filter name="open_tickets" string="Open" domain="[('state','in',['new','in_progress'])]"/>
                <filter name="closed_tickets" string="Closed" domain="[('state','=','closed')]"/>
            </search>
        </field>
    </record>

    <record id="view_quickdesk_ticket_kanban" model="ir.ui.view">
        <field name="name">quickdesk.ticket.kanban</field>
        <field name="model">quickdesk.ticket</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_color_bullet">
                <field name="color"/>
                <field name="name"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="assigned_to"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_kanban_card oe_kanban_color_{{ record.color.raw_value }}">
                            <div class="o_kanban_details">
                                <strong><field name="name"/></strong><br/>
                                <span><field name="partner_id"/></span><br/>
                                <span>Priority: <field name="priority"/></span><br/>
                                <span>Assigned: <field name="assigned_to"/></span>
                            </div>
                            <div class="mt-2">
                                <span class="badge badge-info">Upvotes: <field name="upvotes"/></span>
                                <span class="badge badge-danger ml-1">Downvotes: <field name="downvotes"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_quickdesk_ticket" model="ir.actions.act_window">
        <field name="name">Support Tickets</field>
        <field name="res_model">quickdesk.ticket</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first support ticket</p>
        </field>
    </record>
</odoo>
